<div class="span-12 border">
  <div class="span-2">
    <%= gravatar_for current_user %>
  </div>
  <div class="span-10 last">
    <div class="big"><%= current_user.email %></div>
    <%= link_to "Edit profile", edit_user_registration_path %>
  </div>
  <div class="span-12">
    <%= render :template => 'tweets/new' %>
  </div>
  <div class="span-12">
    <div id="tweets">
      <%= render 'layouts/tweets' %>
    </div>
    <% if @page > 0 %>
      <%= render 'layouts/more_tweets' %>
    <% end %>
  </div>
</div>
<div class="span-12 last">
  <div class="span-12 big">
    <%= link_to "Who to follow", users_path %>
  </div>
  
  <%= render 'users/followers' %>
  <%= render 'users/followeds' %>
</div>

